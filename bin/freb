#!/usr/bin/env node

var path = require('path');
var fs = require('fs');
var freb = require('../lib/freb.js');

var program = require('commander');
var promptly = require('promptly');

program
    .version('0.1.0')
    .option('-p, --peppers', 'Add peppers')
    .option('-P, --pineapple', 'Add pineapple')
    .option('-b, --bbq', 'Add bbq sauce')
    .option('-c, --cheese [type]', 'Add the specified type of cheese [marble]', 'marble');

/**
 * define install command
 */
program
    .command('install <name>')
    .description('run remote setup commands')
    .action(function(name){
        console.log('install ' + name);
    });

program
    .command('create <name>')
    .action(function(name){
        console.log('create ' + name);
    });





program.parse(process.argv);

var list = ['tobi', 'loki', 'jane', 'manny', 'luna'];

//promptly.choose('Choose the coolest pet:', list, function(err, val){
//    console.log('you chose %d "%s"', val, list[val]);
//    process.stdin.destroy();
//});

promptly.prompt('Enter your user name:', function(err, val){
    if (err){
        throw err;
    }else{
        console.log('your are user name is :' + val);
        promptly.password('Enter your password:', function(err, val){
            if (err){
                throw err;
            }else{
                console.log('your are password is :' + val);
            }
        });
    }
});

if (program.peppers) console.log('  - peppers');
if (program.pineapple) console.log('  - pineapple');
if (program.bbq) console.log('  - bbq');

//freb.lower(process.cwd() + file);